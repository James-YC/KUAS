@model  List<WebApplication1.Models.Album>
@{
    ViewBag.Title = "EFIndex";
}

<form method="get" action="/Genre/EFIndex">
    @Html.DropDownList("genreID", new SelectList(ViewBag.Genres, "GenreId", "Name", ViewBag.SelectedGenreID), new { onchange = "getAlldata()" })

    <input name="SearchText" value="" />

    @*@Html.TextBox("SearchText")*@
    <button class="btn btn-xs btn-success" type="submit">送出</button>

</form>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead></thead>
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td>Genre </td>
                        <td>Title </td>
                        <td>Price </td>

                    </tr>
                    @for (var i = 0; i < Model.Count; i++)
                {
                        <tr>
                            <td>@Model[i].AlbumId</td>
                            <td>@Model[i].GenreId</td>
                            <td>@Model[i].Title</td>
                            <td>@Model[i].Price</td>
                        </tr>
                    }



                </tbody>
                <tfoot></tfoot>

            </table>

        </div>


    </div>
}

